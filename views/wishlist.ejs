         <h1><center> MY WISHLIST</center></h1>
    <div class="container">
        <% wishitems.forEach(book => { %>
        <div class="card" data-bookobjid="<%= book._id %>">
            <% if (book.bookImage && book.bookImage.contentType && book.bookImage.data) { %>
            <img src="data:<%= book.bookImage.contentType %>;base64, <%= book.bookImage.data.toString('base64') %>"
                alt="<%= book.bookName %>" style="width: 100%; height: 200px;">
            <% } else { %>
            <img src="/path/to/placeholder-image.jpg" alt="Placeholder Image" width="100" height="100">
            <% } %>
            <div class="card-content">
                <div class="book-title"  style="text-align: center; padding: 1px 2px 2px;"><%= book.bookName %></div>
        <div class="book-price" style="text-align: center; padding: 1px 10px 2px;">Rs. <%= book.bookPrice %></div>
                <!-- <div class="book-title"><%= book.bookName %></div>
                <div class="book-price">RS <%= book.yourPrice %></div> -->
                <div class="book-description"><%= book.description %></div><br>
                <div>
                    <div>
                        <center>                                                                    
                            <!-- <button data-bookname="<%= book.bookName %>" class="btn" id="explorebtn">Explore</button> -->
                        </center>
                    </div><center>
                    <button data-bookname="<%= book.bookName %>" class="btn" id="deletebtn">Delete from wishlist</button></center>
                </div>
            </div>
        </div>
        <% }); %>
    </div>

    <script>
        // Add your JavaScript code here
        document.addEventListener('DOMContentLoaded', function () {
            const container = document.querySelector('.container');

            container.addEventListener('click', function (event) {
            if (event.target.classList.contains('btn') && event.target.id === 'explorebtn') {
                const bookName = event.target.getAttribute('data-bookname');
                window.location.href = `/explore/${bookName}`;
            }

            if (event.target.classList.contains('btn') && event.target.id === 'deletebtn') {
                const bookname = event.target.getAttribute('data-bookname');
                deleteBookFromWishlist(bookname); // Fix: Pass bookname instead of bookId
            }
        });

            function deleteBookFromWishlist(bookname) {
                fetch(`/deletecartbook/${bookname}`, {
                    method: 'DELETE',
                })
                .then(response => {
                    if (response.ok) {
                        const card = document.querySelector(`.card[data-bookname="${bookname}"]`);
                        window.location.reload();
                        if (card) {
                            card.remove();
                            
                            
                        }
                    } else {
                        console.error('Error deleting book from wishlist');
                    }
                })
                .catch(error => {
                    console.error('Network error:', error);
                });
            }
        });
    </script>
