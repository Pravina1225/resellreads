        <h1>Upload a Book for Resale</h1>
    <form action="/sellbook" method="post" enctype="multipart/form-data">
      <label for="bookId">ISBN Number:</label>
      <input type="text" id="bookId" name="bookId" required pattern="[0-9]{13}" title="Please enter a valid 13-digit ISBN number.">

        <label for="bookName">Book Name:</label>
        <input type="text" id="bookName" name="bookName" required pattern=".{1,255}" title="Please enter a book name (1-255 characters).">

        <label for="edition">Edition</label>
        <input type="text" id="edition" name="edition" required >
        
        <label for="author">Author Name:</label>
        <input type="text" id="author" name="author" required>
        <label for="bookCondition">Condition:</label>
        <select id="bookCondition" name="bookCondition" required>
            <option value="new">New</option>
            <option value="like_new">Like New</option>
            <option value="good">Good</option>
            <option value="acceptable">Acceptable</option>
        </select>
        <label for="bookType">Book Type</label>
        <input type="text" id="bookType" name="bookType" required >
        <label for="rentoption">Rent option</label>
    
        <select name="rentoption" id="rentoption">
          <option value="available">available</option>
          <option value="not available">not available</option>
        </select>
        <label for="yourPrice">Price:</label>
        <input type="number" id="yourprice" name="yourPrice" required pattern="[0-9]+(\.[0-9]{2})?" title="Please enter a valid price (e.g., 10.99).">

        <label for="shippingCharges">Shipping Charge:</label>
        <input type="number" id="shippingCharges" name="shippingCharge" required pattern="[0-9]+(\.[0-9]{2})?" title="Please enter a valid shipping charge (e.g., 5.00).">

        <!-- <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" required pattern="[0-9]+" title="Please enter a valid quantity (positive whole number)."> -->

        <label for="image">Book Image:</label>
        <input type="file" id="image" name="bookimage" accept="image/*" required>

        <label for="publisher">Publisher</label>
        <input type="text" id="publisher" name="publisher" required>

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" cols="50"></textarea>
         <!-- <label for="payment">preferred Payment Mode</label>
        -->
        <br>
        <br>
        <h3>Seller Details</h3>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email"  required>
        <label for="phone">Phone:</label>
        <input type="number" id="phone" name="phone" required>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address">
     
        <div class="btn">
            <input type="submit"  value="Upload Book">
        </div>
    
    </form>
        
