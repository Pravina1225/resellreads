  <div class="container">
    <!-- Card 1 --><% books.forEach(book => { %>
    <div class="card">
        <% if (book.bookimage && book.bookimage.contentType && book.bookimage.data) { %>
            <img src="data:<%= book.bookimage.contentType %>;base64, <%= book.bookimage.data.toString('base64') %>" width="100" height="100">
          <% } else { %>
            <!-- Add a placeholder image or handle the case when bookimage is not available -->
            <img src="/path/to/placeholder-image.jpg" alt="Placeholder Image" width="100" height="100">
          <% } %>
      <div class="card-content">
        <div class="book-title"><%= book.bookName %></div>
        <div class="book-price">RS <%= book.yourPrice %></div>
        <%= book._id %>
        <div><button data-bookobjid="<%= book._id %>" class="btn" id="bookbtn">Explore</button></div>
      </div>
    </div>
      <% }); %>
    <!-- Repeat the structure for additional books -->
  </div>

<script>
            document.addEventListener('DOMContentLoaded', function () {
              const exploreButtons = document.querySelectorAll('.btn');
          
              exploreButtons.forEach(button => {
